<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="julianleng.eyeris.HomeFragmentDetail">


    <ScrollView
        android:layout_width="375dp"
        android:layout_height="515dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/detail_usr_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/app_icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/detail_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/detail_usr_image"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textSize="4pt" />

                <EditText
                    android:id="@+id/detail_usr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_location"
                    android:layout_toRightOf="@id/detail_usr_image"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textSize="4pt" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:ems="24"
                    android:textSize="24pt"
                    android:paddingLeft="8pt"
                    android:paddingRight="8pt"
                    android:textColor="@color/tw__composer_black"
                    android:text="Title"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/detail_content_text"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tw__composer_black"
                    android:ems="16"
                    android:textSize="12pt"
                    android:paddingLeft="8pt"
                    android:paddingRight="8pt"
                    android:paddingTop="8pt"
                    android:paddingBottom="32pt"
                    android:text="Content" />

            </LinearLayout>

            <ListView
                android:id="@+id/detail_comment"
                android:layout_width="match_parent"
                android:layout_height="256dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
